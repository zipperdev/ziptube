extends base 

block content 
    if (errorMessage) 
        span=errorMessage
    img(src=loggedInUser.avatarUrl, alt="", width="100", height="100")
    form(method="POST", enctype="multipart/form-data") 
        input(placeholder="Name", name="name", type="text", value=loggedInUser.name, required) 
        input(placeholder="Username", name="username", type="text", value=loggedInUser.username, required) 
        input(placeholder="Your Email", name="email", type="email", value=loggedInUser.email, required) 
        label(for="avatar")
        input(type="file", id="avatar", name="avatar", accept=".png, .jpg, .jpeg")
        input(placeholder="Location", name="location", type="text", value=loggedInUser.location, required) 
        input(type="submit", value="Update Profile") 
        if !loggedInUser.socialOnly 
            hr
            a(href="/users/edit/password") Change Password